{
  "extends": "@devvit/public-api/devvit.tsconfig.json",
  "compilerOptions": {
    "types": [],
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "incremental": false,
    "moduleResolution": "node",
    "module": "commonjs"
  },
  "include": [
    "src/server/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "functions/**/*",
    "node_modules",
    "dist",
    "src/client"
  ]
}